<script>
    $(document).ready(function(e) {
        init(e);
        function renderPageData(){
            var events = getEventsList().sortBy(function(o){ return o.end_date });
            var published_contests = [];
            $.each( events , function( key, val ){
                if(val.tags == "contests"){
                    today = moment();
                    webDate = moment(val.show_on_web_date);
                    if (today >= webDate) {
                        published_contests.push(val)
                    } 
                }
            });
            if(published_contests.length > 0){
                renderEvents("#events_list","#event_item_template", published_contests, "Halifax Shopping Centre");
            } else {
                $('#no_contests').show()
            }

            show_content();
        }
        loadMallDataCached(renderPageData);
    });
</script>