        $(document).ready(function() {
     
             function renderPageData(){
                 var repo = getRepoList();
            renderRegularDayHours('#side_regular_sunday_template','#side_regular_sunday',0);
                renderRegularDayHours('#side_regular_monday_template','#side_regular_monday',1);
                   renderFeatureItem('#feature_template_id','#feature_id', repo);
                  renderFeatureItem('#feature_template_id_phone','#feature_id_phone',repo);
                  renderRepoTxt('#repo_txt_template_id', '#repo_txt', repo);
                  renderRepoTxtMobile('#repo_txt_mobile_template_id', '#repo_txt_mobile', repo);
                 
                 
                      //Using i18n for localization, for more info please visit http://i18next.com/
            i18n.init({preload: ['en-CA','fr-CA'],resGetPath: '../__lng__.json',fallbackLng: false }, function(t) {
                //load en-CA by default
                i18n.setLng('en-CA', function(t) {
                    $(document).i18n();
                    $('.en-CA').show(); // Shows
                    $('.fr-CA').hide();
                });
            });
            
            $('#en-CA').click(function(){
                event.preventDefault();
                i18n.setLng('en-CA', function(t) {
                    $(document).i18n();
                });
                $('.en-CA').show(); // Shows
                $('.fr-CA').hide();
            });
            
            $('#fr-CA').click(function(){
                event.preventDefault();
                i18n.setLng('fr-CA', function(t) {
                    $(document).i18n();
                });
                $('.en-CA').hide(); // Shows
                $('.fr-CA').show();
            });
                 
                 
                 
             }
            
            loadMallDataCached(renderPageData);
       
        });

    
      
        
        function renderFeatureItem(feature_template,feature_item, repo){
                var item_list = [];
                var feature_template_html = $(feature_template).html();
                Mustache.parse(feature_template_html);   // optional, speeds up future uses
        
                $.each( repo , function( key, val ) {
                    if( val.name == "features"){
                        $.each( val.images , function( key, val ) {
                            var repo_rendered = Mustache.render(feature_template_html,val);
                           
                            item_list.push(repo_rendered);
                        });
                    }
                });
             $(feature_item).html(item_list.join(''));
        }




         
         
    </script>
