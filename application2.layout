    <script>
     function dateToString(dateString){
        var datePart = dateString.split('T');
        var dateItem = datePart[0].split('-');
        var dateFormat = new Date(dateItem[0], dateItem[1]-1, dateItem[2]);

        return dateFormat.toDateString();
    }
    function getCookie(name) {
     var value = "; " + document.cookie;
     var parts = value.split("; " + name + "=");
     if (parts.length == 2) return parts.pop().split(";").shift();
   }
    function close_popup(){
        $(".hidden-popup-bg").fadeOut();
    } 
   function validateNewsletterPopup(){
            if ($("#agree_newsletter").prop("checked") != true){
                alert("Please agree to receive newsletters from Halifax Shopping Centre");
                $("#agree_newsletter").focus();
                return false;
            }
            else{
              
                
                var giftcard = getCheckBoxValue('#giftcard');
                var contest = getCheckBoxValue('#contest');
                var sales = getCheckBoxValue('#sales');
                var advice = getCheckBoxValue('#advice');
                
                $('#fieldwkdij').val(giftcard);
                 $('#fieldwkdik').val(contest);
                  $('#fieldwkdiu').val(sales);
                   $('#fieldwkddl').val(advice);
               var visited = 100; 
                $.cookie('visited', visited, { expires: 7 });
                return true;
            }
        }
    function getCheckBoxValue(checkbox){
            if($(checkbox).prop('checked')){
                return "1";
            }else {
                return "0";
            }
        }
    //adding active class for menu     
    $(document).ready(function() {
        
        /* change footer by counter saved in cookie */
        var footerCount = $.cookie("footer");
        if(footerCount == null){ 
            footerCount = 1; 
            $.cookie('footer', footerCount, { expires: 7 }); 
            $('.footerImg').attr("src","http://assets.codecloudapp.com/sites/5438407c6e6f64462d020000/image/png/1447269164000/footer1.png");
        } else {
            if(footerCount % 2 == 0){
                $('.footerImg').attr("src","http://assets.codecloudapp.com/sites/5438407c6e6f64462d020000/image/png/1447269244000/footer2.png");
     
            }else{
                $('.footerImg').attr("src","http://assets.codecloudapp.com/sites/5438407c6e6f64462d020000/image/png/1447269164000/footer1.png");
            }
            footerCount++;
             $.cookie('footer', footerCount, { expires: 7 }); 
        }
        
        var pathArray = window.location.pathname.split( '/' );
        var slug = pathArray[pathArray.length-1];
        
        if (slug.length===0 || slug ==="/" ||slug.match(/^\/?home/)){
            var visited = $.cookie("visited");
            var winwidth = $(window).width();
            if(visited == null){ visited = 1; $.cookie('visited', visited, { expires: 7 }); }
            // $( "#submit" ).mouseup(function() {
            //     visited = 100; 
            //     $.cookie('visited', visited, { expires: 7 });
            // });
            
            // $( "#submit-mobile").bind('touchstart mousedown', function(event){
            //       visited = 100; 
            //     $.cookie('visited', visited, { expires: 7 });
            
            // });
            if (visited <= 3) {
                if( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) || winwidth <= 600) {
                    // $(".hidden-popup-bg").show();
                }else{
                    //  $(".hidden-popup-bg").show();
                }
                visited++;
                $.cookie('visited', visited, { expires: 7 });
            } else {
                visited++;
                $.cookie('visited', visited, { expires: 7 });
                return false;
            } 
            
        
            
         $(".hidden-popup-bg").click(function(event){
            if( !$( event.target).is('.hidden-popup-form') ) {
            close_popup();
        } else {
            event.stopPropagation();
        }
        });
        $(".hidden-popup-bg .hidden-popup-form").click(function(event){
            event.stopPropagation();
        });     
  
        } else{
            //sub menus
            var planNav = ['directions', 'tourist_info','mall-services','accessibility','hours','security'];
            var latestNav = ['the_latest','events','programs', 'promotions',  'contests','development','news'];
            var styleNav = ['style_all','style_file', 'shop', 'attract', 'spotted', 'consultations', 'setters'];
            var contactNav = ['contact_us', 'leasing', 'jobs'];
          
            if (slug =="community"){
                $('.menu-community').addClass('active');
                
            } else if ($.inArray(slug, planNav) !== -1){
                $('.menu-plan-your-visit').addClass('active');
            } else if ($.inArray(slug, latestNav) !== -1){
                 $('.menu-the-latest').addClass('active');        
            } else if (slug == "stores"){
                 $('.menu-find-a-store').addClass('active');        
            } else if ($.inArray(slug, styleNav) !== -1){
                $('.menu-our-style').addClass('active');      
            } else if ($.inArray(slug, contactNav) !== -1){
                $('.menu-contact-us').addClass('active');
            }
        }
    });
