<script>
    $(document).ready(function(e){
        init(e);
        function renderAll(){
            var social_feed = getSocialFeed()
            var latest_tweet = social_feed.twitter[0]
            var latest_fb_post = social_feed.facebook[0]
            
            $('#latest_tweet').text(latest_tweet.text)
            var tweet_date = new Date(latest_tweet.created_at.split(',')[0])
            $('#latest_tweet_date').text(get_month(tweet_date.getMonth()) + " " + tweet_date.getDay())
            
            $('#latest_fb').text(latest_fb_post.text)
            var fb_date = new Date(latest_fb_postlatest_fb_post.created_at.split(',')[0])
            $('#latest_fb_date').text(get_month(fb_date.getMonth()) + " " + fb_date.getDay())
            
            show_content();
        }
        loadMallDataCached(renderAll); 
    })
</script>