<script>
    $(document).ready(function(e){
        init(e);
        var is_holiday = false;
        function renderAll(){
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            prefix = get_prefix();
            var pages_json = prefix+"/pages/" + slug + ".json"
            $.getJSON(pages_json).done(function(data) {
                $('#mm_page_title').html(data.title.toUpperCase());
                $('#mm_page_content').html(data.body);
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#404_msg").fadeIn("fast");
                }
            }); 
            console.log(slug);
            if(slug == "halifaxcentre-santa" ||slug == "halifaxcentre-big-black-bow" || slug == "halifaxcentre-gift-cards" ||slug == "halifaxcentre-holiday-hours" || slug == "halifaxcentre-big-black-bow-2"){
                $("#holiday_menu").show();
                $("#default_menu").hide();
                console.log("holiday_menu");
                is_holiday =true;
                // console.log("holiday_menu",$('.spec_offer').removeAttr( 'style' ));
            }
            else {
                $("#default_menu").show();
                $("#holiday_menu").hide();
                console.log("default menu");
            }
            show_content();
            if(is_holiday == true){
                $('.spec_offer').css('width', '');
            }
        }
        loadMallDataCached(renderAll); 
    })
</script>