<script type="text/javascript">
$(document).ready(function () {

  /* Disable input until they agree to TAC */
  $('.hscbutton').attr('disabled','disabled');

  $('#agree').change(function(){
    if($('#agree').is(":checked")){
      $('.hscbutton').removeAttr('disabled');
    }else{
      $('.hscbutton').attr('disabled','disabled');
    }
  });
  /* END disable input */

    var visited = $.cookie("visited");
    var winwidth = $(window).width();
    
    if(visited == null){ visited = 1; $.cookie('visited', visited, { expires: 7 }); }
    
    $( "#submit" ).mouseup(function() {
      visited = 100; $.cookie('visited', visited, { expires: 7 });
    });
    
    if (visited &lt;= 3) {
        if( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) || winwidth &lt;= 600) {
            $('#smModal').modal('show');
        }else{
            $('#lgModal').modal('show');
        }
        visited++;
        $.cookie('visited', visited, { expires: 7 });
    } else {
        visited++;
        $.cookie('visited', visited, { expires: 7 });
        return false;
    }
}); // ready
</script>
